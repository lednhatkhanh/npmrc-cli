{
    "name": "npmrc-cli",
    "version": "1.0.1",
    "description": "A tool to manage .npmrc file",
    "main": "src/index.tsx",
    "scripts": {
        "dev": "nodemon",
        "build": "npm run clean && babel src --out-dir lib --extensions '.ts'",
        "lint": "tslint -c tslint.json -p tsconfig.json ./src/**/*.ts",
        "link": "npm link",
        "clean": "rimraf lib",
        "precommit": "lint-staged"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lednhatkhanh/npmrc-cli.git"
    },
    "author": "Nhat Khanh <lednhatkhanh@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lednhatkhanh/npmrc-cli/issues"
    },
    "homepage": "https://github.com/lednhatkhanh/npmrc-cli#readme",
    "bin": {
        "npmrc-cli": "./lib/index.js"
    },
    "dependencies": {
        "chalk": "^2.4.1",
        "commander": "^2.16.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.51",
        "@babel/core": "^7.0.0-beta.51",
        "@babel/node": "^7.0.0-beta.51",
        "@babel/preset-env": "^7.0.0-beta.51",
        "@babel/preset-typescript": "^7.0.0-beta.51",
        "@types/chalk": "^2.2.0",
        "@types/inquirer": "0.0.42",
        "@types/jest": "^23.1.3",
        "@types/node": "^10.5.1",
        "husky": "^0.14.3",
        "jest": "^23.2.0",
        "lint-staged": "^7.2.0",
        "nodemon": "^1.17.5",
        "prettier": "^1.13.7",
        "rimraf": "^2.6.2",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "ts-jest": {
            "useBabelrc": true,
            "enableTsDiagnostics": true
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "git add"
        ]
    },
    "files": [
        "lib",
        "package.json",
        "README.md",
        "LICENSE"
    ]
}
